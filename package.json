{
  "name": "clean-node-api",
  "version": "1.0.1",
  "description": "Construindo uma API Rest em NodeJS utilizando TDD, Clean Architecture e Design Patterns.",
  "main": "src/main/index.js",
  "scripts": {
    "start": "node src/main/index.js",
    "test": "jest --silent --noStackTrace --passWithNoTests --runInBand --forceExit",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:integration": "npm test -- --watch -c jest-integration-config.js",
    "test:staged": "npm test -- --findRelatedTests --silent",
    "test:ci": "npm test -- --coverage --silent",
    "test:coveralls": "npm run test:ci && coveralls < coverage/lcov.info",
    "check": "npm-check -u -s"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.1.3",
    "coveralls": "^3.0.11",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "standard": "^16.0.3",
    "supertest": "^6.1.3"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "express": "^4.17.1",
    "fast-glob": "^3.2.5",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.6.3",
    "validator": "^13.5.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/andersonluizpereira/clean-node-api.git"
  },
  "keywords": [],
  "author": "Anderson Pereira",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/andersonluizpereira/clean-node-api/issues"
  },
  "homepage": "https://github.com/andersonluizpereira/clean-node-api#readme"
}
